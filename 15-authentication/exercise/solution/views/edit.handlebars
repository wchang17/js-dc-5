<h1>Edit your profile</h1>

<form action="/edit" method="post">
  <input name="displayname" type="text" class="form-control" placeholder="Display name" value="{{ currentUser.username }}">
  <textarea name="bio" class="form-control" placeholder="Tell us about yourself!">{{ currentUser.description}}</textarea>
  <input type="submit" value="Update" class="btn btn-primary btn-block">
</form>
